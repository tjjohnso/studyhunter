<% title "Project Classes" %>

<table>
  <tr>
    <th>Name</th>
    <th>Creator</th>
    <th>Deadline or Target Date</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @project_classes.each do |project_class| %>
  <tr>
    <td><%= link_to project_class.name, project_class %></td>
    <% creator = User.find project_class.creator_id %>
    <td><%= "#{creator.first_name} #{creator.last_name}" %></td>
    <td><%= project_class.end_date %></td>
    <td><%= project_class.description %></td>
    <td><%= link_to 'Edit', edit_project_class_path(project_class) %></td>
    <td><%= link_to 'Remove', project_class, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project class', new_project_class_path %>
