<% title "Locations" %>

<!--<h1>Listing locations</h1>-->

<table id="list">
  <tr>
    <th>Name</th>
    <th>Street</th>
    <th>City</th>
    <th>Country</th>
    <th>Amenities</th>
    <th>Overall rating</th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= link_to location.name, location %></td>
    <td><%= location.street %></td>
    <td><%= location.city %></td>
    <td><%= location.country %></td>
    <td><%= location.amenities %></td>
    <td><%= location.overall_rating %></td>
    <td><%= link_to 'Edit', edit_location_path(location) if user_signed_in? %></td>
    <!--<td><%#= link_to 'Remove', location, :confirm => 'Are you sure?', :method => :delete %></td>-->
  </tr>
<% end %>
</table>

<br />

<% if user_signed_in? %>
  <%= link_to 'New Location', new_location_path %>
<% end %>

<div style="width:100%;padding-left: 100px">
<%= gmaps4rails(@json) %>
</div>
