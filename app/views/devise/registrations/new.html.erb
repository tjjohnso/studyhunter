<% title "sign_up" %>

<h1> sljfsdklfjskd</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field"><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div class="field"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div class="field"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="field">
    <% for role in Role.all %>
      <div>
        <%= check_box_tag "user[role_ids][]", role.id, false, :disabled => !role.functional  %>
        <% if role.functional %>
          <%= label_tag role.name %>
        <% else %>
          <%= label_tag role.name, "#{role.name} (Coming in StudyHunter 2.0!)", :class => "disabled_label" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
