<% title "Study Sessions" %>

<!--<h1>Listing study_sessions</h1>-->

<table>
  <tr>
    <th>Project instance</th>
    <th>Location</th>
    <th>Meeting date</th>
    <th></th>
  </tr>

<% @study_sessions.each do |study_session| %>
  <tr>
    <td><%= study_session.project_instance_id %></td>
    <td><%= study_session.location_id %></td>
    <td><%= study_session.meeting_date %></td>
    <td>
      <%= link_to 'Show', study_session %>
      <% if ( !study_session.project_instance.nil? and !study_session.project_instance.users.nil? ) %>
        <% if study_session.project_instance.users.includes?(current_user) %>
          <%= link_to 'Edit', edit_study_session_path(study_session) %>
        <% end %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<% if user_signed_in? %>
  <%= link_to 'New Study session', new_study_session_path %>
<% end %>