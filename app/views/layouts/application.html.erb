<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "StudyHunter" %></title>
    <%= csrf_meta_tag %>  
    <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
    <%= stylesheet_link_tag 'custom', :media => 'screen' %>
  </head>
  <body>
    <div class="container">
      <header>
        <%= render 'layouts/user_nav' %>
        <div id="site_nav" style="clear:both; position:relative">
          <%= link_to image_tag( "logo.png", :width => 200, :alt => "Studyhunter", :class => "main_logo" ), root_path %>
          <%= render 'layouts/main_menu' %>
          <div class="clearall"></div>
        </div>
      </header>

      <div id="main_content" style="clear:both">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
        <%= content_tag :h1, yield(:title) if show_title? %>
        <%= yield %>
        <%= yield :scripts %>
      </div>
    </div>
  </body>
</html>

