<div id="user_nav">
  <% if user_signed_in? %>
    Signed in as <%= link_to "#{current_user.first_name} #{current_user.last_name}", edit_user_registration_path %>. If this isn't you,
    <%= link_to "Sign Out", destroy_user_session_path, :method => :delete  %>
  <% else %>
    <%= link_to "Sign Up", new_user_registration_path  %> or <%= link_to "Sign In", new_user_session_path %>
  <% end %>
</div>