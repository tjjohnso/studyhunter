<% title "Students" %>

<table>
  <tr>
    <th>University</th>
    <th>Major</th>
    <th>Rating</th>
  </tr>
  <% for student in @students %>
    <tr>
      <td><%= student.university_id %></td>
      <td><%= student.major %></td>
      <td><%= student.rating %></td>
      <td><%= link_to "Show", student %></td>
      <td><%= link_to "Edit", edit_student_path(student) %></td>
      <td><%= link_to "Remove", student, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Student", new_student_path %></p>
